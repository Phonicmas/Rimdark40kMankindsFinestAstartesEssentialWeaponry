<Defs>

<!-- Combat knife -->
  <ThingDef ParentName="BEWH_AstartesMeleeBase">
    <defName>BEWH_AstartesKnife</defName>
    <label>combat knife</label>
    <description>A standard issue Astartes combat knife, that is issued to every Space Marine as soon as they recover from gene-seed implantation. Roughly the size of a normal human short sword, the knife has a monomolecular edge that never dulls.\n\nPassive: Terminal Precision - 30% chance to deal 4x the damage to the enemy.</description>
    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <workSkill>Crafting</workSkill>
    </recipeMaker>
    <statBases>
      <WorkToMake>8500</WorkToMake>
      <Mass>2.1</Mass>
      <MaxHitPoints>500</MaxHitPoints>
    </statBases>
    <costList>
      <Plasteel>8</Plasteel>
    </costList>
    <costStuffCount>45</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/Weapons/Melee/BEWH_AstartesCombatKnife</texPath>
      <shaderType>BEWH_CutoutThreeColor</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>14</power>
        <cooldownTime>1.4</cooldownTime>
        <armorPenetration>0.8</armorPenetration>
      </li>
    </tools>
    <comps>
      <li Class="Core40k.CompProperties_MultiColor">
        <colorMaskAmount>3</colorMaskAmount>
        <defaultPrimaryColor>(213,158,76)</defaultPrimaryColor>
        <defaultSecondaryColor>(98,98,98)</defaultSecondaryColor>
        <defaultTertiaryColor>(255,255,255)</defaultTertiaryColor>
      </li>
    </comps>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <modExtensions>
      <li Class="VEF.Things.ThingDefExtension">
        <weaponCarryDrawOffsets>
          <north>
            <drawOffset>(0, 0, -0.2)</drawOffset>
          </north>
          <east>
            <drawOffset>(0, 0, -0.15)</drawOffset>
          </east>
          <south>
            <drawOffset>(0, 0, -0.2)</drawOffset>
          </south>
          <west>
            <drawOffset>(0, 0, -0.15)</drawOffset>
          </west>
        </weaponCarryDrawOffsets>
      </li>
      <li Class="Core40k.DefModExtension_CriticalHit">
        <criticalHitChance>0.3</criticalHitChance>                          <!-- Equals 30% chance -->
        <criticalHitDamageMultiplier>5</criticalHitDamageMultiplier>        <!-- Damage done is multiplied by 5 here so damage done to pawn that was 14 would become 70 (Im not doubting anyone maths skills, just for clarity xd) -->
      </li>
    </modExtensions>
  </ThingDef>

<!-- Judiciar Power Sword -->
  <ThingDef ParentName="BEWH_AstartesMeleeBase">
