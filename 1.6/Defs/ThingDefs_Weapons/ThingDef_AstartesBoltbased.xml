<Defs>

<!-- STANDARD -->

  <!-- Bolt Pistol -->
  <ThingDef ParentName="BEWH_AstartesRangedBase">
    <defName>BEWH_AstartesBoltPistol</defName>
    <label>bolt pistol</label>
    <description>The sandard short-range sidearm of the Adeptus Astartes, firing mass-reactive rounds. Compact, reliable and versatile, it is most effective in close-quarters combat, while retaining the lethality of a full-sized bolter.\n\nAvalible Loadout: Standard, Inferno</description>
    <graphicData>
      <texPath>Things/Weapons/Ranged/Boltbased/BEWH_BoltPistol</texPath>
      <shaderType>BEWH_CutoutThreeColor</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.9</drawSize>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>22500</WorkToMake>
      <Mass>2.1</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.33</AccuracyLong>
      <RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <skillRequirements>
        <Crafting>11</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>22</Steel>
      <Plasteel>28</Plasteel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Core40k.Verb_ShootChangeableBullets</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BEWH_BolterRound</defaultProjectile>
        <warmupTime>0.35</warmupTime>
        <range>22.9</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>BEWH_SFX_BolterShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps Inherit="False">      <!-- CompProperties_AmmoChanger needs the weapon to not have CompEquipable, if it does you need to not inherit any comps and instead put them in yourself from parents-->
      <li Class="Core40k.CompProperties_AmmoChanger">
        <compClass>Core40k.Comp_AmmoChanger</compClass>
        <availableProjectiles>
          <li>BEWH_BolterRound</li>
          <!-- <li>BEWH_BolterRoundMetalStorm</li> -->
          <li>BEWH_BolterRoundInferno</li>
          <!--<li>BEWH_BolterRoundKraken</li>
          <li>BEWH_BolterRoundTempest</li>-->
        </availableProjectiles>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Styleable"/>
      <li Class="CompProperties_Biocodable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
      <li Class="Core40k.CompProperties_MultiColor">
        <colorMaskAmount>3</colorMaskAmount>
        <defaultPrimaryColor>(0.52,0.53,0.53)</defaultPrimaryColor>        <!-- If this is not set, it will default to use color of the stuff its made out of (if any)-->
        <defaultSecondaryColor>(0.38,0.38,0.38)</defaultSecondaryColor>
        <defaultTertiaryColor>(0.79,0.58,0.08)</defaultTertiaryColor>
      </li>
    </comps>
    <modExtensions>
      <li Class="VEF.Things.ThingDefExtension">
        <weaponCarryDrawOffsets>
          <north>
            <drawOffset>(0, 0, -0.2)</drawOffset>
          </north>
          <east>
            <drawOffset>(-0.1, 1, -0.2)</drawOffset>
          </east>
          <south>
            <angleOffset>-20</angleOffset>
            <drawOffset>(0, 1, -0.2)</drawOffset>
          </south>
          <west>
            <drawOffset>(0.1, 1, -0.2)</drawOffset>
          </west>
        </weaponCarryDrawOffsets>
      </li>
    </modExtensions>
  </ThingDef>

